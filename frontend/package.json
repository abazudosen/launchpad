{
  "jest": {
    "collectCoverageFrom": ["frontend/**/*.{js,jsx}", "server/**/*.{ts,tsx}"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "frontend/services/eject",
      "frontend/services/eslint",
      "server/code.js",
      "types.js"
    ],
    "setupFiles": ["../config/polyfills.js", "../test/setupTests.js"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/__tests__/utils/"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.(js|jsx)$": "../node_modules/babel-jest",
      "^.+\\.css$": "../config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "../config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  }
}
